
@{
    ViewBag.Title = "customerlogin";
    Layout = "~/Views/Shared/retail_layout.cshtml";
}
@*customer login should be done by retail shop by entering the phone no*@
<h2>Customer SignIn</h2>
<hr />
<br />
<div style="text-decoration:underline">User Name</div><input id="username" name="UserName" value="" />
<a href="javascript:void(0)" onclick="getCustomerDetail();" >Submit</a>
<script>
    function getCustomerDetail()
    {
        var username = $("#username").val();
        window.location = "/retail/" + username;;
    }

</script>
